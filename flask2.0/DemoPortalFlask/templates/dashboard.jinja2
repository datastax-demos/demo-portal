        <table class="table" id="launch-table">
            <tr>
                <th></th>
                <th>Launch Date</th>
                <th>Cluster Name</th>
                <th>TTL</th>
                <th>Cluster Size</th>
{#                <th>State</th>#}
                <th>Demo Addresses</th>
                <th>OpsCenter</th>
                <th>IP Addresses</th>
                <th>Max Cost</th>
                <th></th>
            </tr>
        </table>
    </div>
{% endblock %}

{% block tail %}
    <script src="{{ url_for('static',
                    filename='bootstrapvalidator/dist/js/bootstrapValidator.min.js') }}"></script>
    <script src="{{ url_for('static', filename='bootstrap/js/tooltip.js') }}"></script>
    <script src="{{ url_for('static', filename='bootstrap/js/popover.js') }}"></script>
    <script src="{{ url_for('static', filename='bootstrap-confirmation/bootstrap-confirmation.js') }}"></script>
    <script src="{{ url_for('static', filename='js/dashboard.js') }}"></script>
{% endblock %}
