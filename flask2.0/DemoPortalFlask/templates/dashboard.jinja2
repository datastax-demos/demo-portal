{% extends "base.jinja2" %}

{% block head %}
    <link href="{{ url_for('static',
                   filename='bootstrapvalidator/dist/css/bootstrapValidator.min.css') }}"
          rel="stylesheet">
    <link href="{{ url_for('static', filename='css/dashboard.css') }}"
          rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="col-md-offset-3 col-md-6">
        <h3>Launch Demo</h3>

        <form role="form" action="launch" method="post" id="launch-form">
            <div class="form-group" id="demo-choice">
                <label for="demoChoice">Demo Name</label>
                <select class="form-control" id="demoChoice" name="demoChoice">
                    <option>Connected Office</option>
                    <option>Weather Sensors (Not Yet Implemented)</option>
                    <option>Real-Time Cross-Global Geolocation (Not Yet Created)</option>
                </select>
            </div>
            <div class="form-group" id="password-group">
                <label for="ttl">Time to Live (in Hours)</label>
                <input type="number" class="form-control"
                       id="ttl" name="ttl"
                       value=2>
            </div>
            <div class="form-group" id="clustersize-group">
                <label for="clustersize">DataStax Enterprise Node Count</label>
                <input type="number" class="form-control"
                       id="clustersize" name="clustersize"
                       value=3 >
            </div>
            <button type="submit" class="btn btn-default btn-success"
                    id="submit-button">
                Launch
            </button>
        </form>
    </div>

    <div class="col-md-offset-0 col-md-12" id="launch-div">
        <div class="row">
            <div class="col-md-6">
                <h3>Launched Demos</h3>
                <p>Information updates every 10 seconds</p>
            </div>

