{% extends "base.jinja2" %}

{% block head %}
    <link href="{{ url_for('static', filename='css/pem.css') }}"
          rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="col-md-offset-3 col-md-6">
        <h3>PEM Key</h3>
        <div class="well" id="pem-file">{{ pem_file }}</div>
        <p>
            Copy this file into: ~/.ssh/demo-launcher.pem
            <br/>
            Protect the file using: chmod 600 ~/.ssh/demo-launcher.pem
        </p>
    </div>
{% endblock %}

